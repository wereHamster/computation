{
  "files": {
    "ignore": [".direnv", "dist", "node_modules"]
  },

  "formatter": {
    "indentStyle": "space"
  },

  "linter": {
    "rules": {
      "style": {
        "noUselessElse": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noThenProperty": "off"
      }
    }
  }
}
